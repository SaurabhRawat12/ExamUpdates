<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbg"
    tools:context=".HomePage">



    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/marque"
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to ExamUpdates"
            android:textAlignment="center"
            android:textSize="20sp"
            android:singleLine="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:textColor="#EBD710"
            android:textStyle="bold"
            />

        <LinearLayout

            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/jobs"
                app:cardCornerRadius="20dp"
                android:layout_width="170dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/jobs"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:textColor="#D54545"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Latest Jobs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/admissions"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="170dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/admissions"
                        android:layout_width="130dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#D54545"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Admissions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/results"
                app:cardCornerRadius="20dp"
                android:layout_width="170dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/result"
                        android:layout_width="120dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#D54545"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Results"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/answerkey"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="170dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/answerkey"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:textColor="#D54545"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Answer Key"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/syllabus"
                app:cardCornerRadius="20dp"
                android:layout_width="170dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:background="@drawable/books"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:layout_gravity="center"
                        android:textColor="#D54545"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Syllabus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/scholarships"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="10dp"
                android:layout_width="170dp"
                android:layout_height="170dp">

                <LinearLayout
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center"
                        android:background="@drawable/scholarship"
                        android:layout_width="100dp"
                        android:layout_height="100dp" />
                    <TextView
                        android:textColor="#D54545"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="Scholarships"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

        </LinearLayout>




    </LinearLayout>




</ScrollView>